{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "outDir": "./build",
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./src",
    "typeRoots": ["interfaces", "../node_modules/@types"]
  },
  "include": ["**/*.ts"]
}